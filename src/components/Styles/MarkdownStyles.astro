<style is:global>
  .markdown {
    * {
      @apply text-sm;
    }

    a {
      @apply underline text-orange-500 hover:text-orange-600 transition-colors;
    }

    h1,
    h2,
    h3 {
      @apply before:box-content before:bg-orange-500 before:pl-1.5 before:mr-2 before:rounded-md;
    }

    h1 {
      @apply text-2xl font-bold;
    }

    h2 {
      @apply text-lg font-semibold;
    }

    h3 {
      @apply text-base font-medium;
    }

    p {
      @apply leading-6;
    }

    strong {
      @apply font-bold;
    }

    ul {
      @apply list-disc ml-4;
    }

    ol {
      @apply list-decimal ml-4;
    }

    img {
      @apply mx-auto dark:bg-stone-900 dark:shadow-white;
    }

    blockquote {
      @apply border-l-4 p-4 border-gray-300 italic dark:border-gray-700;
    }

    details {
      @apply space-y-4;
      summary {
        @apply cursor-pointer;
      }
      p {
        @apply ml-4;
      }
    }

    pre.astro-code {
      @apply px-6 py-4 leading-3 rounded-md border dark:border-gray-700;
    }

    .twitter-tweet {
      @apply m-0;
    }

    code:not(pre code) {
      @apply text-orange-500 bg-gray-100 break-all px-1 py-0.5 mx-0.5 rounded-md whitespace-normal dark:bg-gray-800;

      &::before,
      &::after {
        @apply content-none;
      }
    }

    table {
      @apply border-collapse border border-slate-300 w-full;
      & td,
      & th {
        @apply p-2 border border-slate-300;
      }
    }

    details {
      :not(summary) {
        @apply ml-4;
      }
    }
  }
</style>
