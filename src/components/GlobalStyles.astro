<style is:global>
  body {
    @apply bg-white dark:bg-stone-900 dark:text-gray-100;
  }

  .markdown {
    @apply space-y-8 mb-8;

    a {
      @apply underline font-semibold text-blue-500 dark:text-blue-400 hover:text-blue-600 dark:hover:text-blue-500 transition-colors;
    }

    h1 {
      @apply text-4xl font-bold;
    }

    h2 {
      @apply text-2xl font-semibold;
    }

    h3 {
      @apply text-lg font-medium;
    }

    strong {
      @apply font-bold;
    }

    ul {
      @apply list-disc ml-4;
    }

    img {
      @apply mx-auto dark:bg-stone-900 dark:shadow-white;
    }

    details {
      @apply space-y-4;
      summary {
        @apply cursor-pointer;
      }
      p {
        @apply ml-4;
      }
    }

    pre.astro-code {
      @apply px-6 py-4 leading-3 rounded-md border dark:border-gray-700;
      code {
        @apply text-sm;
      }
    }

    .twitter-tweet {
      @apply m-0;
    }

    code:not(pre code) {
      @apply text-blue-500 font-semibold bg-gray-100 break-all text-sm px-1 py-0.5 mx-0.5 rounded-md whitespace-normal dark:bg-gray-800 dark:text-blue-400;

      &::before,
      &::after {
        @apply content-none;
      }
    }
  }
</style>
