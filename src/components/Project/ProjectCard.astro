---
import { Image } from "astro:assets";
import Tag from "@/components/Common/Tag.astro";

interface Props {
  title: string;
  description: string;
  tags: string[];
  imageURL: string;
  githubURL: string;
}

const { title, description, tags, imageURL, githubURL } = Astro.props;
---

<a href={githubURL} target="_blank" class="group">
  <div class="rounded-md flex flex-col gap-1">
    <Image
      src={imageURL}
      alt={title}
      width={320}
      height={100}
      decoding="async"
      loading="lazy"
      class="rounded-[3px]"
    />
    <div>
      <h3
        class="text-base font-semibold group-hover:text-orange-500 transition-colors duration-300"
      >
        {title}
      </h3>
      <div class="text-sm">{description}</div>
      <div class="text-sm flex gap-x-4 flex-wrap">
        {tags.map((tag) => <Tag>#{tag}</Tag>)}
      </div>
    </div>
  </div>
</a>
