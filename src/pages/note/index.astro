---
import NoteCard from "@/components/Note/NoteCard.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import ContentListLayout from "@/layouts/ContentListLayout.astro";
import { getContents } from "@/utils/helpers/content";

const notes = await getContents({ collectionName: "note" });

const meta = {
  title: "작성한 메모",
  description: "공유하고 싶은 기술 및 경험 등을 짧게 작성한 글들이에요.",
};
---

<BaseLayout {...meta}>
  <ContentListLayout>
    <text slot="title">작성한 메모 ({notes.length})</text>
    {notes.map((note) => <NoteCard slot="content-item" {...note} />)}
  </ContentListLayout>
</BaseLayout>
