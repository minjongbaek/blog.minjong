---
import ContentCard from "@/components/Content/ContentCard.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import ContentListLayout from "@/layouts/ContentListLayout.astro";
import { getContents } from "@/utils/content";

const posts = await getContents({ collectionName: "post" });

const meta = {
  title: "작성한 글",
  description: "공유하고 싶은 기술 및 경험 등을 작성한 글들이에요.",
};
---

<BaseLayout {...meta}>
  <ContentListLayout>
    <text slot="title">작성한 메모 ({posts.length})</text>
    {posts.map((post) => <ContentCard slot="content-item" collectionName="post" {...post} />)}
  </ContentListLayout>
</BaseLayout>
