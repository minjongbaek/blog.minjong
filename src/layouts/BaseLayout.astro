---
import BaseHead from "@/components/Base/BaseHead.astro";
import Footer from "@/components/Base/Footer.astro";
import Header from "@/components/Base/Header.astro";
import BlogStyles from "@/components/BlogStyles.astro";
import PartytownScripts from "@/components/Common/PartytownScripts.astro";
import type { Meta } from "@/types/meta";

type Props = Meta;

const meta = Astro.props;
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <BaseHead {...meta} />
    <PartytownScripts />
    <style>
      body {
        @apply bg-white dark:bg-stone-900 dark:text-gray-200;
      }
    </style>
  </head>
  <body>
    <div class="container mx-auto px-4 max-w-3xl min-h-screen">
      <BlogStyles />
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
